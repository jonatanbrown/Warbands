<div id="character-equipment-top">
  <div id="character-equipment-head">
    <% if head = @character.equipped_head %>
      <%= render :partial => "equipments/equipment", :locals => { :equipment => head } %>
    <% else %>
      No Helm
    <% end %>
    <%= select_tag(:select_char_head, options_for_select(@unused_head.collect{ |item| [item.name, item.id] }.insert(0,"Choose an item")), :class => 'equipment-selector') %>
  </div>
</div>
