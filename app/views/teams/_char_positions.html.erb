<p><b>Set character positions</b></p>

<% if @team.errors.any? %>
  <span class="red">
    <% @team.errors.messages.each do |msg| %>
      <p><%= msg[1][0] %></p>
    <% end %>
  </span>
<% end %>

<div>1 <%= collection_select(:position0, :character, @team.characters, :_id, :name, {:selected => @team.get_char(0)._id}, {:class => 'character-selector', 'data-pos'.to_sym => '0'}) %></div>
