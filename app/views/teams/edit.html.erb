<h2><%= @team.name %></h2>
<div id="formation-select" class="bright-background left">
  <div id="team-formation">
    <%= render :partial => "formation" %>
  </div>
  <p>Set formation</p>

  <%= select_tag('formation-selector', options_for_select([['One', 1], ['Two', 2], ['Three', 3], ['Four', 4]], @team.formation), 'data-id' => @team._id) %>
</div>
  <div id="position-select" class="bright-background left">
  <div id="char-positions">
    <%= render :partial => "char_positions" %>
  </div>
  <a href="#" id="submit-character-positions" data-id="<%= @team._id %>">Save positions</a>
</div>


<div id="edit-character-names" class="bright-background left">
    <p><b>Set character names</b></p>
    <%= render :partial => "characters/edit_character", :collection => @team.characters %>
    <a href="#" id="submit-character-names">Save names</a>
</div>

